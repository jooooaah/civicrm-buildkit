[Desktop Entry]
Version=1.0
Type=Application
Path={{BUILDKIT}}
Exec=xfce4-terminal --active-tab --title 'edge#1' -e 'use-bknix edge -s' --tab --title 'edge#2' -e 'use-bknix edge -s' --tab --title 'edge#3' -e 'use-bknix edge -s'  --tab --title 'edge#4' -e 'use-bknix edge -s'
Icon=org.xfce.terminalemulator
StartupNotify=true
Terminal=false
OnlyShowIn=XFCE;
X-AppStream-Ignore=True
Name=bknix-edge
Comment=Use the command line with bleeding-edge versions of PHP/MySQL/etc
